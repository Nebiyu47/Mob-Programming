<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">
    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:src="@drawable/download"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"/>

    <TextView
        android:id="@+id/tv1"
        android:text="Sign in your account "
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/img"
        android:layout_marginTop="30dp"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/tv1"/>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/l1"
        android:text="Email address(required)" />

    <EditText
        android:id="@+id/ed1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/coustome_new" />
    <TextView
        android:id="@+id/tv3"
        android:text="Password(required)"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed1"/>

    <EditText
        android:id="@+id/ed2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv3"
        android:background="@drawable/coustome_new"
        android:layout_centerHorizontal="true"/>

 <TextView
     android:id="@+id/tv4"
     android:layout_marginTop="10dp"
     android:text="Forgot Password?"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignRight="@+id/ed2"
     android:layout_below="@+id/ed2"/>


    <Button
        android:id="@+id/bt1"
        android:text="SignIn"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:layout_below="@+id/tv4"
        android:layout_marginTop="70dp"/>
    <TextView
        android:id="@+id/tv5"
        android:text="Don't have an account?"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_below="@+id/bt1"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
   <Button
       android:id="@+id/bt2"
       android:text="Create a new acoount"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:textStyle="bold"
       android:background="@android:color/white"
       android:textColor="@android:color/holo_blue_dark"
       android:layout_below="@+id/tv5"/>


</RelativeLayout>